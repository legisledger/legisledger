    <script>
        function toggleBayesian(id) {
            const element = document.getElementById(id);
            element.classList.toggle('hidden');
        }

        // Threshold selector functionality (demo)
        document.getElementById('threshold').addEventListener('change', function() {
            const threshold = parseInt(this.value);
            let retained = 0;
            let removed = 0;
            
            const claims = document.querySelectorAll('.claim');
            claims.forEach(claim => {
                const confidence = parseInt(claim.getAttribute('data-confidence'));
                if (confidence >= threshold) {
                    retained++;
                } else {
                    removed++;
                }
            });
            
            // This is a simplified demo - in real implementation, would re-render page
            document.getElementById('retained-count').textContent = retained;
            document.getElementById('removed-count').textContent = 3 + (3 - retained);
            
            if (retained === 0) {
                alert('No claims meet ' + threshold + '% threshold. Try lowering threshold to see more claims.');
            }
        });
    </script>
